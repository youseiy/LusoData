<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LusoDataApp.EcradeRegistro">
	

	<StackLayout>
		
        <ImageButton Source="VoltarButton2.png" BackgroundColor="White" HorizontalOptions="Start"  Clicked="BackToMainPage"></ImageButton>
        
        <Image Source="LusoDataLogo2.png" HeightRequest="15" HorizontalOptions="Start" ></Image>
        <Label BackgroundColor="#A4C4DB"></Label>
        <Entry x:Name="nomeEntry" ReturnType="Next"  Placeholder="Nome"  ></Entry>
        <Label ></Label>
        <Entry x:Name="emailEntry" ReturnType="Next" Placeholder="Email"></Entry>
	    <Label></Label>
        <Entry x:Name="senhaEntry" ReturnType="Next" Placeholder="Senha"></Entry>
	    <Label></Label>
        <Entry x:Name="rSenhaEntry" Placeholder="Repetir a senha"></Entry>
	    <Label></Label>
        <Button VerticalOptions="Center" Text="Seguinte" TextColor="#155C8F"  BorderColor="#155C8F" BorderWidth="1.5" CornerRadius="1" BackgroundColor="White" Clicked="ToDadosAdicionais"></Button>

    </StackLayout>

</ContentPage>